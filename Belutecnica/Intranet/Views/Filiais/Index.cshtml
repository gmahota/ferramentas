                    <th>
                        @Html.DisplayNameFor(model => model.morada2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.provincia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.pais)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dataCriacao)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>

                            <div class="tools">
                                <a asp-action="Edit" asp-route-id="@item.filialId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.filialId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.filialId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.porDefeito)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.morada1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.morada2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.provincia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.pais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dataCriacao)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
 
