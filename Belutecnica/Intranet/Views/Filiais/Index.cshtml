        <table class="table table-hover table-striped" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.porDefeito)
